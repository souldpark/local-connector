{
    "version": "1.0.1",
    "homepage": "https://example.com/myapp",
    "description": "Local connector for SouldPark",
    "license": "License information",
    "architecture": {
        "64bit": {
            "url": "https://github.com/souldpark/local-connector/releases/download/1.0.1/local-connector.zip",
            "hash": "0e7f70280a3febc811d6c9c23b66e12d59db029b90cf66dcc68992c6e6b4ae1c"
        }
    },
    "depends": [
        "python",
        "nodejs",
        "mkcert"
    ],
    "post_install": [
        "cd $dir",
        "npm install --omit=dev",
        "mkcert --install -cert-file local-connector.pem -key-file local-connector-key.pem localhost",
        "npx winser -i -s -a"
    ],
    "pre_uninstall": [
        "npx winser -r -x -s"
    ]
}