{
    "version": "1.0.2",
    "homepage": "https://example.com/myapp",
    "description": "Local connector for SouldPark",
    "license": "License information",
    "architecture": {
        "64bit": {
            "url": "https://github.com/souldpark/local-connector/releases/download/1.0.2/local-connector.zip",
            "hash": "1ce05fdb37a0504fa83004b7996081727cc3f6e7c77f2d88794a0475d75712c0"
        }
    },
    "depends": [
        "python",
        "nodejs",
        "mkcert"
    ],
    "post_install": [
        "cd $dir",
        "npm install --omit=dev",
        "mkcert --install -cert-file local-connector.pem -key-file local-connector-key.pem localhost",
        "npx winser -i -s -a"
    ],
    "pre_uninstall": [
        "npx winser -r -x -s"
    ]
}